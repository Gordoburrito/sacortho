.block-item-row(:style="{ background: props.linear_gradient ? props.linear_gradient : null }", :data-no-title='!props.title' )
  .block-item-row__container
    h2.block-item-row__title(v-html='props.title' v-if='props.title', :class="{ 'block-item-row__title--large': props.large_title, 'block-item-row__title--left': props.left_aligned, 'block-item-row__title--primary': props.alt_color }" ref='theTitle')
    .block-item-row__row(:class="{ 'block-item-row__row--large': props.items.length > 3 }")
      .block-item-row__item(v-for='(item, i) in props.items', :key='`item-row-${i}`', :class="{ 'block-item-row__item--left': props.left_aligned }", :data-items='props.items.length', ref='item')
        BaseIcon.block-item-row__icon(:name='item.icon' v-if='item.icon')
        .block-item-row__item-title-container(:style='{ height: maxHeight }')  
          h3.block-item-row__item-title(v-html='item.title', v-if='item.title' ref='itemTitle')
        .block-item-row__content
          p.block-item-row__text(v-html='item.text')
          BaseButtonSimple.block-item-row__item-btn(:props='item.button' @onClick='handleItemClick(item)' v-if='item.add_button')
    .block-item-row__button-container(v-if='props.add_cta', ref='mainBtn')
      BaseButtonCta.block-item-row__button(:props='props.main_button' @click='handleCtaClick')              
