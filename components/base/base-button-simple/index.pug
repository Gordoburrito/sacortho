.base-button-simple
  nuxt-link.base-button-simple__button.base-button-simple__button--link(v-if='props.path', :to='props.path + (props.hash ? props.hash : "")')
    span(v-html='props.label', :style="{ '--simpleBtnClr': textColor }")
    BaseIcon.base-button-simple__caret(name='caret', :style="{ stroke: textColor }" v-if='!noArrow')   
  
  button.base-button-simple__button.base-button-simple__button--button(v-else-if='!props.path && !props.href' tabindex='0', @click='onClick', :aria-label='props.aria ? props.aria : null')
    span(v-html='props.label', :style="{ '--simpleBtnClr': textColor }")
    BaseIcon.base-button-simple__caret(name='caret', :style="{ stroke: textColor }" v-if='!noArrow')
  
  a.base-button-simple__button.base-button-simple__button--ext-link(v-else-if='props.href', :href='props.href' target='_blank')
    span(v-html='props.label', :style="{ '--simpleBtnClr': textColor }")
    BaseIcon.base-button-simple__caret(name='caret', :style="{ stroke: textColor }" v-if='!noArrow') 
