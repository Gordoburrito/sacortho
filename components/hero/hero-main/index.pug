.hero-main(:class="{ 'hero-main--no-image': !props.image.src && !props.video.src, 'hero-main--small-height': props.small }")
  .hero-main__overlay(v-if='props.image.src || props.video.src')
  .hero-main__image-container(v-if='props.image.src && !props.video.src')
    picture.hero-main__picture(ref='image')
      source(:srcset='webpSrc' type='image/webp')
      img.hero-main__image(:src='imgSrc', :alt='props.image.alt', :style='{ objectPosition: props.image.position ? props.image.position : null }' aria-hidden='true')
  //- .hero-main__video(v-else-if='props.video.src')
  //-   video.hero-main__video(:src='props.video.src' type='video/mp4' autoplay muted playsinline loop ref='video')
  .hero-main__container
    .hero-main__content.hero-main__content--title-only(v-if='!props.text && $route.path === "/"')
      h1.hero-main__title(v-html='props.title' ref='heroTitle') 
    .hero-main__content(v-else-if='props.text')
      h1.hero-main__title.hero-main__title--small(v-html='props.title' ref='heroTitle')
      .hero-main__text(v-html='props.text' ref='heroText')
      BaseButtonCta.hero-main__cta(:props='props.button' v-if='props.has_button' ref='heroBtn' @click='handleCtaClick')  
    .hero-main__content.hero-main__content--pages(v-else-if='!props.text && $route.path !== "/"')
      h1.hero-main__title(v-html='props.title' ref='heroTitle')
